@model IEnumerable<WebApplication1.Models.InventoryDb.Report>

@{
    ViewBag.Title = "Отчёт";
}

<h2>Отчёт за: @ViewBag.Month</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kolvo)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kolvo)
            </td>
        </tr>
    }

</table>
<p><a class="btn btn-default" href="@Url.Action("Index", "Requests")">Заявки &raquo;</a></p>


